	/* POSTCONDITION - OUTPUTS TOTAL COST OF ALL SKI TRIPS 			 */
	/* 				   FOR A SPECIFIC DATE 							 */
	/*****************************************************************/
	{
		/********************/
		/* VARIABLE SECTION */
		/********************/
		String costdf;
		double cost;
		
		cost = 0.00;
	}
